# TestMaker Configuration

# Target URL to analyze
# TESTMAKER_URL=https://stage.ianai.co

# Path to the authentication storage state file
TESTMAKER_AUTH_FILE=auth.json

# Output directory
# TESTMAKER_OUTPUT_DIR=./output/my-site

# Default format (markdown, playwright, both)
# TESTMAKER_FORMAT=both

# Include screenshots
# TESTMAKER_SCREENSHOTS=true

# Auto Login Credentials
emailname=user@example.com
password=your-password

# Dedicated Test Account (Optional - used for unit/integration tests)
# TEST_EMAIL=test-user@example.com
# TEST_PASSWORD=test-password

# Dashboard Authentication
DASHBOARD_USER=admin
DASHBOARD_PASS=secure-password

# Dev Server Error Handling (can be disabled when server is fixed)
# Block localhost/WebSocket requests from dev builds (default: enabled)
BLOCK_LOCALHOST_REQUESTS=true
# Filter console errors from dev server artifacts (default: enabled)
FILTER_DEV_ERRORS=true
